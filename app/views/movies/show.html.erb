<% provide(:title,"Show Movie") %>
<h1>Show Movies</h1>
<div class="divCenterAlign well">
	<div class="rt-align-votes">
		<%= link_to "<i class='icon-chevron-up'></i>".html_safe, vote_movie_path(@movie, type: "up"),:method => :post, class: "btn" %>
		<%= @movie.reputation_for(:votes).to_i %>
		<%= link_to "<i class='icon-chevron-down'></i>".html_safe, vote_movie_path(@movie, type: "down"),:method => :post, class: "btn" %>
	</div>	
	Movie Title:<strong><%= @movie.title %></strong><br/>
	Genre:<strong><%=@movie.genre.genre %></strong><br/>
	Language: <strong><%= @movie.language.language %></strong><br/>
	Description: <strong><%= @movie.description %></strong>	
</div>
<div class="well divCenterAlign">
	Tags: <% @movie.tags.each do |tag| %>
	 <span class="label label-success"><%= tag %></span>
	<% end %>
	
</div>
<div class="well div-right-align">
	By: <strong><%= @movie.user.Username %></strong><br/>
</div>

<%= link_to "<i class='icon-home'></i>".html_safe, root_path, class: "btn btn-info" %>
<%= link_to "<i class= 'icon-arrow-left'></i>".html_safe, movies_path, class: "btn btn-info" %>